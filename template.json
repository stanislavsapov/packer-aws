{
    "variables": {
      "account": "",
      "aws_access_key": "",
      "aws_secret_key": "",
      "aws_region": "",
      "ami_name": "",
      "version": "",
      "region": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
            "root-device-type": "ebs"
          },
          "owners": [
            "099720109477"
          ],
          "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "{{user `ami_name`}}-{{user `version`}}",
        "tags": {
          "Name": "{{user `ami_name`}}-{{user `version`}}-{{timestamp}}",
          "OS_Version": "Ubuntu",
          "Release": "xenial",
          "Base_AMI_Name": "{{ .SourceAMIName }}",
          "creation_date": "{{isotime \"Mon Jan _2 15:04:05 UTC 2006\"}}"
        },
        "snapshot_tags": {
            "Name": "{{user `ami_name`}}-{{user `version`}}-{{timestamp}}",
            "OS_Version": "Ubuntu",
            "Release": "xenial",
            "Base_AMI_Name": "{{ .SourceAMIName }}",
            "creation_date": "{{isotime \"Mon Jan _2 15:04:05 UTC 2006\"}}"
          }
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
            "mkdir -p /srv/salt/salt /srv/salt/pillar"
        ]
      },
      {
        "type": "salt-masterless",
        "local_state_tree": "/srv/salt/salt",
        "local_pillar_roots": "/srv/salt/pillar",
        "bootstrap_args": "-L -i {{user `minion_id`}} stable {{user `salt-version`}}"
      }
    ],
    "post-processors": [
      {
        "type": "manifest",
        "output": "manifest.json",
        "strip_path": true
      }
    ]
  }
